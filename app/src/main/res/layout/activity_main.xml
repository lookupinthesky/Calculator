<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#424242"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"

    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.calculator.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/allClear"
                style="@style/buttonStyle"
                android:text="AC" />

            <TextView
                android:id="@+id/signChange"
                style="@style/buttonStyle"
                android:text="+/-" />

            <TextView
                android:id="@+id/percentage"
                style="@style/buttonStyle"
                android:text="%" />


            <TextView
                android:id="@+id/divide"
                style="@style/buttonStyle"
                android:text="/" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/seven"
                style="@style/buttonStyle"
                android:text="7" />

            <TextView
                android:id="@+id/eight"
                style="@style/buttonStyle"
                android:text="8" />

            <TextView
                android:id="@+id/nine"
                style="@style/buttonStyle"
                android:text="9" />


            <TextView
                android:id="@+id/multiply"
                style="@style/buttonStyle"
                android:text="x" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/four"
                style="@style/buttonStyle"
                android:text="4" />

            <TextView
                android:id="@+id/five"
                style="@style/buttonStyle"
                android:text="5" />

            <TextView
                android:id="@+id/six"
                style="@style/buttonStyle"
                android:text="6" />


            <TextView
                android:id="@+id/subtract"
                style="@style/buttonStyle"
                android:text="-" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/one"
                style="@style/buttonStyle"
                android:text="1" />

            <TextView
                style="@style/buttonStyle"
                android:id="@+id/two"
                android:text="2" />

            <TextView
                android:id="@+id/three"
                style="@style/buttonStyle"
                android:text="3" />


            <TextView
                android:id="@+id/plus"
                style="@style/buttonStyle"
                android:text="+" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/zero"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="2"
                android:gravity="center"
                android:background="#FFFFFF"
                android:textSize="32sp"
                android:text="0" />

            <!-- <Button
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:layout_weight="1"
                 android:text="AC" />-->

            <TextView
                android:id="@+id/decimal"
                style="@style/buttonStyle"
                android:text="." />


            <TextView
                android:id="@+id/equalsTo"
                style="@style/buttonStyle"
                android:text="=" />

        </LinearLayout>

        <!--
                <TextView android:text="AC" />

                <TextView android:text="AC" />

                <TextView android:text="AC" />

                <TextView android:text="AC" />-->

    </LinearLayout>


</LinearLayout>


